extends layouts/main-layout.pug 

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content 
    main
        if prods.length > 0
                .grid
                    each product in prods
                        article.card.product-item
                            header.card__header 
                                h1.product__title #{product.title}
                            .card__image
                                img(src="https://t4.ftcdn.net/jpg/01/66/55/01/360_F_166550191_hEVqAvFjIbRMZNDTaBoi0j7fX7ynPS5x.jpg", alt="A Book")
                            .card__content 
                                h2.product__price $19.99
                                p.product__description A very interesting book about so many even more   
                            .card__actions 
                                button.btn Add to Cart
        else
            h1 No Products
